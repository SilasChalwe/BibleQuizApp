<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.ImageView?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.nextinnomind.biblequizapp.controller.ScoreViewController" styleClass="root-pane" stylesheets="@../static/style.css">
    <BorderPane>
        <!-- Top Header -->
        <top>
            <HBox alignment="CENTER" styleClass="score-header">
                <Label fx:id="quiz_level_name" text=" Quiz Score" styleClass="score-title" />
            </HBox>
        </top>

        <!-- Center Content -->
        <center>
            <StackPane alignment="TOP_CENTER" style="-fx-padding: 20;">
                <VBox  spacing="20" alignment="CENTER" maxWidth="500" style="-fx-padding: 10;">
                    <!-- Trophy -->
                    <StackPane prefWidth="80" prefHeight="80">
                        <Circle fx:id="trophyBackground" radius="40" />
                        <ImageView  fx:id="trophyImage" fitWidth="50" fitHeight="50" preserveRatio="true" pickOnBounds="true" />
                    </StackPane>


                    <!-- Result Title -->
                    <VBox spacing="5" alignment="CENTER">
                        <Label fx:id="resultTitle"   />
                        <Label fx:id="resultMessage" wrapText="true" maxWidth="280" textAlignment="CENTER" styleClass="score-result-message" />
                    </VBox>

                    <!-- Score Box -->
                    <VBox spacing="15" alignment="CENTER" styleClass="score-box">

                        <!-- Score Circle -->
                        <StackPane prefWidth="80" prefHeight="80">
                            <Circle radius="45" strokeWidth="6" fill="transparent" styleClass="score-progress-bg"/>
                            <Circle fx:id="scoreProgressCircle" radius="45" strokeWidth="6" fill="transparent" styleClass="score-progress-fg" rotate="90" />
                            <VBox alignment="CENTER" spacing="1">
                                <Label fx:id="scorePercentage" text="0%" styleClass="score-percentage"/>
                                <Label text="Score" styleClass="score-label"/>
                            </VBox>
                        </StackPane>

                        <!-- Score Details -->
                        <HBox spacing="10" alignment="CENTER">
                            <VBox alignment="CENTER" spacing="2">
                                <Label fx:id="correctAnswers" text="12" styleClass="score-correct"/>
                                <Label text="Correct" styleClass="score-detail-label"/>
                            </VBox>
                            <Separator orientation="VERTICAL" prefHeight="30"/>
                            <VBox alignment="CENTER" spacing="2">
                                <Label fx:id="incorrectAnswers" text="3" styleClass="score-incorrect"/>
                                <Label text="Incorrect" styleClass="score-detail-label"/>
                            </VBox>
                            <Separator orientation="VERTICAL" prefHeight="30"/>
                            <VBox alignment="CENTER" spacing="2">
                                <Label fx:id="totalQuestions" text="15" styleClass="score-total"/>
                                <Label text="Total" styleClass="score-detail-label"/>
                            </VBox>
                        </HBox>

                        <!-- Level Info + Buttons -->
                        <HBox spacing="6" alignment="CENTER" >
                            <Button fx:id="retryButton" text="ðŸ”„ Retry" visible="false" styleClass="retry-btn" />
                            <Button fx:id="nextLevelButton" text="âž¤ Next" visible="false" styleClass="next-level-btn" />
                        </HBox>
                    </VBox>
                </VBox>
            </StackPane>
        </center>

        <!-- Bottom -->
        <bottom>
            <HBox alignment="CENTER" spacing="10" styleClass="score-bottom">
                <Button fx:id="levelsButton" text=" Levels" styleClass="score-levels-btn" />
            </HBox>
        </bottom>

    </BorderPane>

</StackPane>
